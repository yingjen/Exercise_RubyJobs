<p id="notice"><%= notice %></p>

<h1>RubyJobs</h1>
<h4>Job board for Ruby and Rails developers in Taiwan</h4>
<p class="text-right"><%= link_to 'New Job', new_job_path, class:'btn btn-success btn-lg' %></p>
<table class = "table table-hover">
  <thead>
    <tr>
      <th>Posted</th>
      <th>Job Title</th>
      <th>Company Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.deadline %></td>
        <td><%= link_to job.title, job %></td>
        <td><%= job.company_name %></td>
        <td><%= job.location %></td>
        <!--<td><%= link_to 'Show', job %></td>-->
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @jobs, :theme => 'twitter-bootstrap-3' %>
<br>


